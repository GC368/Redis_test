pipeline {
    agent any

    environment {
        // Path to your Terraform binary, if not globally available
        TERRAFORM_VERSION = '1.6.0'
    }

    stages {
        stage('Setup Terraform') {
            steps {
                // Install or verify Terraform
                sh '''
                if ! terraform version | grep $TERRAFORM_VERSION; then
                    echo "Terraform version $TERRAFORM_VERSION is not installed."
                    exit 1
                fi
                '''
            }
        }

        stage('Terraform Init') {
            steps {
                // Initialize Terraform
                sh 'terraform init'
            }
        }

        stage('Terraform Plan') {
            steps {
                // Generate and show the execution plan
                sh 'terraform plan -out=tfplan'
            }
        }

        stage('Terraform Apply') {
            steps {
                // Apply the changes (requires approval)
                sh 'terraform apply -auto-approve tfplan'
            }
        }
    }

    post {
        always {
            // Clean up workspace or perform any post-run tasks
            cleanWs()
        }
        failure {
            // Notify in case of failure
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
